<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:textColor="#414141"
        android:textSize="10sp"
        android:text="232323232"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_below="@+id/chat_time"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_my_send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:background="@drawable/chat_my_send_round"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/iv_text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/item_my_send_text"
            android:src="@mipmap/send_error_remind" />
    </RelativeLayout>



</RelativeLayout>