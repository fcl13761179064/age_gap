<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/index_bg">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_30"
        android:src="@mipmap/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_toLeftOf="@+id/tv_page"
        android:text="3"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_22"
        android:text="/14"
        android:textColor="@color/page_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="42dp"
        android:background="@mipmap/location_logo" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="524dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/sign_up_in"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@mipmap/signin_location" />

        <RelativeLayout
            android:id="@+id/rl_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="51dp"
            android:layout_below="@+id/location_img">

            <TextView
                android:id="@+id/tv_current_location"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/locaion_uncheckable_shape"
                android:gravity="center|left"
                android:hint="Choose city"
                android:paddingLeft="18dp"
                android:paddingRight="25dp"
                android:textColor="#ffc0bfc0"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@mipmap/signin_more" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="44dp"
                android:layout_marginBottom="112dp"
                android:background="@drawable/signup_button_shape"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>