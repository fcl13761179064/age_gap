<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/index_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/signin_agegap" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/sign_bg"
        android:elevation="@dimen/dp_30">


        <TextView
            android:id="@+id/tv_switch"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="44dp"
            android:text="Sign up and start your conversation"
            android:textColor="@color/color_666666"
            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="146dp"
            android:layout_height="44dp"
            android:layout_marginTop="116dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sign_up"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Sign Up"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="146dp"
            android:layout_height="44dp"
            android:layout_marginTop="116dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sign_in"
            android:textColor="#8E7BFD"
            android:text="Sign In"
            android:textSize="17sp" />

    </RelativeLayout>
</RelativeLayout>