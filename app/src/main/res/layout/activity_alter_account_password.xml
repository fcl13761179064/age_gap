<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/index_bg">

    <com.supersweet.luck.widget.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/setting_head_shape"
        app:center_tv="Change Password"
        app:left_iv="@mipmap/back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_device_item_top_setting"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="27dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/signup_password" />


            <com.supersweet.luck.widget.BiuEditTextUtils
                android:id="@+id/alter_email_password_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:background="@null"
                android:hint="Current password"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:textColor="@color/login_text_percent"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="27dp"
            android:background="@color/login_deviding_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="27dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/signup_password" />

            <com.supersweet.luck.widget.BiuEditTextUtils
                android:id="@+id/alter_email_password_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@null"
                android:hint="New password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/login_text_percent"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="27dp"
            android:background="@color/login_deviding_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="27dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/signup_password" />

            <com.supersweet.luck.widget.BiuEditTextUtils
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_18"
                android:background="@null"
                android:hint="Confirm new password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/login_text_percent"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>


        <TextView
            android:id="@+id/register_submitBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="44dp"
            android:layout_marginBottom="@dimen/dp_14"
            android:background="@drawable/signup_button_shape"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>