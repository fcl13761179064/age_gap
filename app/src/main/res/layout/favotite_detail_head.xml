<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginBottom="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <com.supersweet.luck.banner.BannerView
                android:id="@+id/my_head"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/user_score_credit"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp_15"
                android:background="@mipmap/score_bg"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_credit_fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textColor="#983E10"
                    android:textSize="20sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textColor="#983E10"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/point_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/detail_profile_wave" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Cathyrine"
                android:textColor="@color/color_333333"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/my_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:hint="famele ,34, newyork"
                android:textColor="#ff666666"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/abount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="I am looking forward to have a good man who
can understand me and give me sunshine."
        android:textColor="#ff666666"
        android:textSize="16dp" />
</LinearLayout>