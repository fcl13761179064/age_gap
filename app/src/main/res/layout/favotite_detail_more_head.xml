<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="@dimen/dp_15">

        <com.supersweet.luck.banner.BannerView
            android:id="@+id/my_head"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:background="@mipmap/match_man"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/detail_profile_wave"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="Cathyrine"
                    android:textColor="@color/color_333333"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/my_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:hint="famele ,34, newyork"
                    android:textColor="#ff666666"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/abount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="I am looking forward to have a good man who
can understand me and give me sunshine."
                    android:textColor="#ff666666"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>